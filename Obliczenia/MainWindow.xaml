<Window x:Class="Obliczenia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Obliczenia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="10,63,0,0" Stroke="Black" VerticalAlignment="Top" Width="139"/>
        <RadioButton x:Name="rk_1" GroupName ="rk" Content="1 przewodowe" HorizontalAlignment="Left" Margin="19,83,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rk_2" GroupName ="rk" Content="wielo przewodowe" HorizontalAlignment="Left" Margin="19,98,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="19,63,0,0" TextWrapping="Wrap" Text="Rodzaje kabli" VerticalAlignment="Top" RenderTransformOrigin="-0.49,1.5"/>

    </Grid>
</Window>
